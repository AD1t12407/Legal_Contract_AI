{
  "manifest_version": 3,
  "name": "AutoPom Learning Extension",
  "version": "0.1.0",
  "description": "Track focus sessions and capture learning moments",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "tabs",
    "webNavigation",
    "idle",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}